<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stack_Activity">

    <TextView
        android:id="@+id/arr_0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="97dp"
        android:background="#270E7463"
        android:gravity="center"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/arr_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="97dp"
        android:background="#270E7463"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/arr_0"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/arr_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="97dp"
        android:background="#270E7463"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/arr_1"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/arr_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="97dp"
        android:background="#270E7463"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/arr_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/arr_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="97dp"
        android:background="#270E7463"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/arr_3"
        app:layout_constraintTop_toTopOf="parent" />





    <Button
        android:id="@+id/button_push"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="108dp"
        android:text="Push"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arr_0" />

    <Button
        android:id="@+id/button_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Pop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arr_4" />

    <TextView
        android:id="@+id/stack_description"
        android:layout_width="339dp"
        android:layout_height="369dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:autoText="false"
        android:clickable="false"
        android:text="A Stack is a Last In First Out (LIFO) data structure. With a Stack, elements are added to the top of the stack as well as removed from the top of the stack. Imagine a large stack of plates in a kitchen. When you need to put back a plate you stick it on the very top of the stack. Then, when you need to grab a plate you also grab from the very top of the stack. The act of putting a plate back on the stack is referred to as a PUSH, and the act of removing a plate from the stack is reffered to as POP."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input" />

    <EditText
        android:id="@+id/input"
        android:layout_width="101dp"
        android:layout_height="80dp"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:background="#270E7463"
        android:inputType="text"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/button_pop"
        app:layout_constraintStart_toEndOf="@+id/button_push"

        app:layout_constraintTop_toBottomOf="@+id/arr_3"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/stack_title"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:background="#0E7463"
        android:gravity="center"
        android:text="Stack"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>